{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/fro-client/dist/index.html"
    }
  ],
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "fro-client/**",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "fro-client/dist"
      }
    }
  ],
  "functions": {
    "backend/server.js": {
      "runtime": "nodejs18.x",
      "maxDuration": 10
    }
  }
}